  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.3",
    "@advanced-rest-client/testing-karma-sl": "^1.0.2",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/eslint-config": "^0.4.1",
